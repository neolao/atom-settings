# Basculer vers la liste des fichiers
'.platform-darwin':
    #'ctrl-left': 'tree-view:toggle-focus'
    #'ctrl-right': 'tree-view:toggle-focus'
    'ctrl-w': 'tree-view:toggle-focus'
    # Ouvrir le menu GIT
    'cmd-g': 'git-plus:menu'


# Confirmer une autocompletion avec Enter
".autocomplete-plus input.hidden-input":
    "enter": "autocomplete-plus:confirm"

'.platform-darwin atom-text-editor':
    # Projets
    'ctrl-cmd-p': 'project-plus:toggle-project-finder'
    # Toggle tree view
    'cmd-e': 'tree-view:toggle'

    # Ouvrir le menu GIT
    'cmd-g': 'git-plus:menu'

# Terminal
'.platform-darwin atom-workspace':
  'cmd-t': 'platformio-ide-terminal:toggle'

