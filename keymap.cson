# Your keymap
#
# Atom keymaps work similarly to stylesheets. Just as stylesheets use selectors
# to apply styles to elements, Atom keymaps use selectors to associate
# keystrokes with events in specific contexts.
#
# You can create a new keybinding in this file by typing "key" and then hitting
# tab.
#
# Here's an example taken from Atom's built-in keymap:
#
# '.editor':
#   'enter': 'editor:newline'
#
# '.workspace':
#   'ctrl-P': 'core:move-up'
#   'ctrl-p': 'core:move-down'
#
#

#

'atom-text-editor':
    'cmd-up': 'editor:move-line-up'
    'cmd-down': 'editor:move-line-down'
    'cmd-d': 'editor:delete-line'
    'alt-cmd-down': 'editor:duplicate-lines'
    'alt-cmd-space': 'autocomplete-plus:activate'
    'alt-ctrl-space': 'autocomplete-plus:activate'
    "cmd-l": "symbols-tree-view:toggle"
    #"cmd-m": "php-integrator-symbol-viewer:toggle-panel"
    "cmd-m": "symbols-list:toggle"
    'alt-shift-left': 'editor:select-to-beginning-of-word'
    'alt-shift-right': 'editor:select-to-end-of-word'

    # Ouvrir le menu GIT
    'cmd-g': 'git-plus:menu'

    # Fold
    'ctrl-f': 'editor:fold-current-row'
    'ctrl-shift-f': 'editor:unfold-current-row'
